<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context="com.example.vytautas.myapplication.MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:contentDescription="@string/description"
        app:srcCompat="@drawable/registration_image" />

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/new_user_registration"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tw_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_et_username"
        android:layout_alignStart="@+id/register_et_username"
        android:layout_alignTop="@+id/register_et_username"
        android:text="@string/registration_te_username"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/register_et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/register_et_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_et_username"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/register_et_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_et_password1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/register_tw_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tw_username"
        android:layout_alignRight="@+id/tw_username"
        android:layout_below="@+id/register_et_username"
        android:text="@string/register_tw_password1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/register_tw_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_et_password1"
        android:layout_alignStart="@+id/register_et_password1"
        android:layout_alignTop="@+id/register_et_password2"
        android:text="@string/register_tw_password2"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/register_et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_et_password2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/register_tw_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_tw_password1"
        android:layout_alignStart="@+id/register_tw_password1"
        android:layout_below="@+id/register_et_password2"
        android:text="@string/register_tw_email"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/register_bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_tw_email"
        android:layout_alignStart="@+id/register_tw_email"
        android:layout_below="@+id/register_tw_email"
        android:layout_marginTop="35dp"
        android:background="@color/orange"
        android:text="@string/register_bt_register" />

    <Button
        android:id="@+id/register_bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/register_bt_register"
        android:layout_toStartOf="@+id/register_bt_register"
        android:text="@string/back_to_login" />


</RelativeLayout>